Binary Lifting.

#include <bits/stdc++.h>
using namespace std;
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    int n,q;
    cin>>n>>q;
    const int LOG = 19; // since 2^18 ~ 2.6e5 > n_max
    vector<vector<int>> up(n+1, vector<int>(LOG, -1));
    for(int i=2, p;i<=n;i++){
        cin>>p;
        up[i][0]=p;
    }
    for(int j=1;j<LOG;j++){
        for(int v=1;v<=n;v++){
            int w=up[v][j-1];
            up[v][j]= w<0 ? -1 : up[w][j-1];
        }
    }
    while(q--){
        int x,k;
        cin>>x>>k;
        for(int b=0;b<LOG && x>0;b++){
            if(k>>b & 1) x=up[x][b];
        }
        cout<<(x>0?x:-1)<<"\n";
    }
    return 0;
}
